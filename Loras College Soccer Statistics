#1. 
SELECT name, minutes, ROUND (posession * 100) AS posession_percentage FROM Loras_Soccer;


SELECT COUNT(*), 
CASE 
    WHEN minutes >= 90 THEN 'Full Game'
    WHEN minutes >= 45 THEN 'Half Game'
    WHEN minutes > 70 THEN 'Less than half'
    ELSE 'No playing time'
END as "Playing_time" 
FROM Loras_Soccer
GROUP BY "Playing time";


